@model KlopZavod.Models.Assoc

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Ассоциация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssocID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocrName" class="control-label">Наименование(сокр.)</label>
                <input asp-for="SocrName" class="form-control" />
                <span asp-validation-for="SocrName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jamoat" class="control-label">Джамоат</label>
                <input asp-for="Jamoat" class="form-control" />
                <span asp-validation-for="Jamoat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
