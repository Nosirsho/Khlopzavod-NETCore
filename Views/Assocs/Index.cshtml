@model IEnumerable<KlopZavod.Models.Assoc>

@{
    ViewData["Title"] = "Index";
}

<h1>Список ассоциаций</h1>

<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Наименование
            </th>
            <th>
                Наименование(сокр.)
            </th>
            <th>
                Джамоат
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocrName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jamoat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssocID"><img src="~/img/edit.png" width="16" height="16"></a> |
                <a asp-action="Details" asp-route-id="@item.AssocID"><img src="~/img/detail.png" width="16" height="16"></a> |
                <a asp-action="Delete" asp-route-id="@item.AssocID"><img src="~/img/delete.png" width="16" height="16"></a>
            </td>
        </tr>
}
    </tbody>
</table>
